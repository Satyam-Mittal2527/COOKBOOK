<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cook Book</title>
    <link rel="stylesheet" href="/css/style_initial.css">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Comfortaa', cursive;
            /* Background color removed to use previous styles */
        }
        .container {
            text-align: center;
            animation: fadeIn 2s; /* Fade-in animation */
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        .continue {
            background: linear-gradient(45deg, #ff6b6b, #ff9999); /* Gradient background */
            color: white;
            border: none;
            border-radius: 25px; /* Rounded corners */
            padding: 15px 30px; /* Increased padding */
            font-size: 18px; /* Larger font size */
            cursor: pointer;
            transition: transform 0.3s, background 0.3s; /* Transition effects */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Box shadow */
            height: 60px; /* Increased height */
            display: flex; /* Flexbox for alignment */
            align-items: center; /* Center the content vertically */
            justify-content: center; /* Center the content horizontally */
        }
        .continue:hover {
            transform: scale(1.05); /* Slightly enlarge on hover */
            background: linear-gradient(45deg, #ff9999, #ff6b6b); /* Reverse gradient on hover */
        }
        .continue::after {
            content: ' ‚ûî'; /* Arrow after the text */
            font-size: 20px; /* Arrow size */
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="/assets/logo.jpg" class="logo" alt="Logo Image">
        <div class="typewriter" id="text"></div>
    </div>
    <a href="/submit"><input type="submit" value="CONTINUE-->" class="continue"></a>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const text = "Welcome to our cookbook! Discover flavors and stories in every recipe. Whether you're after quick meals or adventurous dishes, you'll find something delicious here. Let's create amazing meals together! üç©üçîüçπ";
            const speed = 10; // Speed in milliseconds
            let i = 0;

            function typeWriter() {
                if (i < text.length) {
                    document.getElementById("text").innerHTML += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, speed);
                } else {
                    document.getElementById("text").style.borderRight = "none"; // Remove cursor after typing
                }
            }

            typeWriter(); // Start animation
        });
    </script>
</body>
</html>
